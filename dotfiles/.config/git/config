[pull]
    rebase = true
[push]
    default = simple
[blame]
    date = short
[core]
    excludesfile = ~/.config/git/ignore
[alias]
    ls-assumed = !git ls-files -v | grep '^[[:lower:]]'
[http]
    postBuffer = 524288000
[diff]
    algorithm = minimal
    compactionHeuristic = true
	tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[credential]
	helper = osxkeychain
[merge]
	conflictstyle = diff3
